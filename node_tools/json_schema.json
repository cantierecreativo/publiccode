{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "PublicCode",
  "description": "A schema def for validate publicode yaml",
  "type": "object",
  "properties": {
    "publiccode-yaml-version": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "description": "This key contains the name (short) of the product."
    },
    "applicationSuite": {
      "description":
        "This key contains the name of the suite to which the software belongs",
      "type": "integer",
      "minimum": 0
    },
    "url": {
      "type": "string"
    },
    "landingURL": {
      "type": "string"
    },
    "isBasedOn": {
      "type": "string",
      "description":
        "In case this software is a variant or a fork of another software, which might or might not contain a publiccode.yml file, this key will contain the url of the original project(s)."
    },
    "softwareVersion": {
      "type": "string",
      "description":
        "This key contains the latest stable version number of the software."
    },
    "releaseDate": {
      "type": "string",
      "description":
        "This key contains the date at which the latest version was released."
    },
    "logo": {
      "type": "string"
    },
    "monochromeLogo": {
      "type": "string"
    },
    "platforms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "freeTags": {
      "type": "object",
      "properties": {
        "eng": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ita": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "usedBy": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "roadmap": {
      "type": "string"
    },
    "developmentStatus": {
      "type": "string"
    },
    "softwareType": {
      "type": "string"
    }
  },
  "required": [
    "publiccode-yaml-version",
    "name",
    "url",
    "softwareVersion",
    "releaseDate",
    "developmentStatus",
    "softwareType"
  ]
}
